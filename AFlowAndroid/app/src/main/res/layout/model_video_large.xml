<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_normal"
        android:paddingEnd="@dimen/card_padding_start"
        android:paddingStart="@dimen/card_padding_start"
        android:paddingTop="@dimen/padding_normal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/avatar"
            style="@style/AFlow.Avatar.Normal"
            app:roundAsCircle="true"
            app:viewAspectRatio="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_normal"
            android:layout_marginStart="@dimen/padding_normal"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/owner_name"
                style="@style/TextAppearance.ContentTitle"
                android:lines="1"
                tools:text="Leonardo DiCaprio" />

            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/release_time"
                style="@style/TextAppearance.ContentDes"
                tools:text="5分钟前" />
        </LinearLayout>

        <TextView
            style="@style/TextAppearance.ContentSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:text="5分钟前" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/card_padding_start"
        android:layout_marginStart="@dimen/card_padding_start">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/cover"
            style="@style/AFlow.Cover"
            app:viewAspectRatio="@dimen/video_ratio_normal" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_normal"
        android:paddingEnd="@dimen/card_padding_start"
        android:paddingStart="@dimen/card_padding_start"
        android:paddingTop="@dimen/padding_normal">

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.ContentTitle"
            android:maxLines="2"
            tools:text="What a beautiful day!" />

        <TextView
            android:id="@+id/content"
            style="@style/TextAppearance.Content"
            android:layout_marginBottom="@dimen/padding_normal"
            android:layout_marginTop="@dimen/padding_normal"
            android:maxLines="4"
            tools:text="The Sun is shining bright and early in the morning." />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginEnd="@dimen/card_padding_start"
        android:layout_marginStart="@dimen/card_padding_start"
        android:background="@color/flow_card_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/card_padding_start"
            android:paddingTop="@dimen/card_padding_start">

            <TextView
                android:id="@+id/play_content"
                style="@style/TextAppearance.ContentDes"
                android:drawablePadding="2dp"
                android:drawableStart="@drawable/ic_more_repost"
                android:gravity="center"
                android:singleLine="true"
                tools:text="1300" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/card_padding_start"
            android:paddingTop="@dimen/card_padding_start">

            <TextView
                android:id="@+id/banana_count"
                style="@style/TextAppearance.ContentDes"
                android:drawablePadding="2dp"
                android:drawableStart="@drawable/ic_home_like"
                android:gravity="center"
                android:singleLine="true"
                tools:text="120" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/card_padding_start"
            android:paddingTop="@dimen/card_padding_start">

            <TextView
                android:id="@+id/comment_count"
                style="@style/TextAppearance.ContentDes"
                android:drawablePadding="2dp"
                android:drawableStart="@drawable/ic_home_reply"
                android:gravity="center"
                android:singleLine="true"
                tools:text="130" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/card_padding_start"
            android:paddingTop="@dimen/card_padding_start">

            <TextView
                android:id="@+id/action_share"
                style="@style/TextAppearance.ContentSubTitle"
                android:drawableStart="@drawable/ic_more_share"
                android:gravity="center"
                android:singleLine="true" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>