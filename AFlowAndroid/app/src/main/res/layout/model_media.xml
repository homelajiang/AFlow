<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_image_view"
    android:layout_width="240dp"
    android:layout_height="135dp"
    android:src="@drawable/ic_discover"
    app:cardCornerRadius="@dimen/card_radius">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/card_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:background="@drawable/gradient_dark"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.ContentTitle"
            android:layout_above="@+id/des"
            android:lines="1"
            android:textColor="@color/font_white"
            tools:text="Cooking time" />

        <TextView
            android:id="@+id/des"
            android:layout_marginTop="5dp"
            style="@style/TextAppearance.ContentSub"
            android:layout_alignParentBottom="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/font_white"
            tools:text="Wake you every morning beautiful music" />
    </RelativeLayout>

</android.support.v7.widget.CardView>