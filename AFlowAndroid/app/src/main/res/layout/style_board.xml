<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/TextAppearance.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这个是Title" />

        <TextView
            style="@style/TextAppearance.ContentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这个是ContentTitle" />

        <TextView
            style="@style/TextAppearance.ContentSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这个是ContentSubTitle" />

        <TextView
            style="@style/TextAppearance.Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这个是Content" />

        <TextView
            style="@style/TextAppearance.ContentDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这个是ContentDes" />

    </LinearLayout>
</ScrollView>