<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="25dp">

    <include
        android:id="@+id/title_layout"
        layout="@layout/title_bar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toTopOf="@+id/control_layout"
        app:layout_constraintTop_toBottomOf="@+id/title_layout">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/cover"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            app:roundedCornerRadius="10dp" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/control_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/seekBar_layout">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/play_pre"
            style="@style/AFlow.MusicController"
            android:layout_width="0dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_skip_previous_black_42dp" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/play_or_pause"
            style="@style/AFlow.MusicController"
            android:layout_width="0dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_play_arrow_black_56dp" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/play_next"
            style="@style/AFlow.MusicController"
            android:layout_width="0dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_skip_next_black_42dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/seekBar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toTopOf="@id/track_list">

        <TextView
            android:id="@+id/current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="02:30" />

        <SeekBar
            android:id="@+id/seekBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:progress="50" />

        <TextView
            android:id="@+id/total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="05:00" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/track_list"
        style="@style/AFlow.MusicController"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/add_to_playlist"
        app:srcCompat="@drawable/ic_playlist_play_black_36dp" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/add_to_playlist"
        style="@style/AFlow.MusicController"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/track_list"
        app:layout_constraintRight_toLeftOf="@id/play_mode"
        app:srcCompat="@drawable/ic_skip_previous_black_42dp" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/play_mode"
        style="@style/AFlow.MusicController"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/add_to_playlist"
        app:layout_constraintRight_toLeftOf="@id/share"
        app:srcCompat="@drawable/ic_skip_previous_black_42dp" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/share"
        style="@style/AFlow.MusicController"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/play_mode"
        app:layout_constraintRight_toLeftOf="@id/more"
        app:srcCompat="@drawable/ic_skip_previous_black_42dp" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/more"
        style="@style/AFlow.MusicController"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/share"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_skip_previous_black_42dp" />

</android.support.constraint.ConstraintLayout>
