<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title_layout"
        layout="@layout/title_bar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/control_layout"
        app:layout_constraintTop_toBottomOf="@+id/title_layout">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/cover"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:background="#666" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/control_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/seekBar">

        <android.support.v7.widget.AppCompatImageButton
            style="@style/AFlow.MusicController"
            app:srcCompat="@drawable/ic_skip_previous_black_42dp" />

        <android.support.v7.widget.AppCompatImageButton
            style="@style/AFlow.MusicController"
            app:srcCompat="@drawable/ic_play_arrow_black_56dp" />

        <android.support.v7.widget.AppCompatImageButton
            style="@style/AFlow.MusicController"
            app:srcCompat="@drawable/ic_skip_next_black_42dp" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="50"
        app:layout_constraintBottom_toTopOf="@id/bottom_1" />


    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/bottom_1"
        style="@style/AFlow.MusicController"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bottom_2"
        app:srcCompat="@drawable/ic_skip_previous_black_42dp" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/bottom_2"
        style="@style/AFlow.MusicController"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bottom_1"
        app:layout_constraintRight_toLeftOf="@id/bottom_3"
        app:srcCompat="@drawable/ic_skip_previous_black_42dp" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/bottom_3"
        style="@style/AFlow.MusicController"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bottom_2"
        app:layout_constraintRight_toLeftOf="@id/bottom_4"
        app:srcCompat="@drawable/ic_skip_previous_black_42dp" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/bottom_4"
        style="@style/AFlow.MusicController"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bottom_3"
        app:layout_constraintRight_toLeftOf="@id/bottom_5"
        app:srcCompat="@drawable/ic_skip_previous_black_42dp" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/bottom_5"
        style="@style/AFlow.MusicController"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bottom_4"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_skip_previous_black_42dp" />

</android.support.constraint.ConstraintLayout>
