<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bar_height"
    android:background="@color/white"
    android:elevation="@dimen/bar_elevation"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/home_layout"
        style="@style/AFlow.ClickableLayoutBorderless"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/home"
            android:layout_width="@dimen/bar_icon_size"
            android:layout_height="@dimen/bar_icon_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_home_selected" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/discovery_layout"
        style="@style/AFlow.ClickableLayoutBorderless"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/discovery"
            android:layout_width="@dimen/bar_icon_size"
            android:layout_height="@dimen/bar_icon_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_discover" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/user_layout"
        style="@style/AFlow.ClickableLayoutBorderless"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/user"
            android:layout_width="@dimen/bar_icon_size"
            android:layout_height="@dimen/bar_icon_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_discover" />
    </FrameLayout>

</LinearLayout>